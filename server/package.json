  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "lint": "eslint . --ext .js,.mjs,.cjs",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@sentry/node": "^7.11.0",
    "@sentry/tracing": "^7.11.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.2.2",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^6.0.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "sharp": "^0.32.1",
    "socket.io": "^4.7.2",
    "winston": "^3.9.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "mongodb-memory-server": "^8.12.0",
    "nodemon": "^3.1.11",
    "prettier": "^2.8.8",
    "supertest": "^6.3.4"
  },
  
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 46,
        "functions": 50,
        "lines": 65,
        "statements": 61
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
