{
  "name": "social-media-server",
  "version": "0.1.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "lint": "eslint . --ext .js,.mjs,.cjs",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^6.7.0",
    "cors": "^2.8.5",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.1",
    "winston": "^3.9.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "cloudinary": "^1.32.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.6.1",
    "supertest": "^6.3.4",
    
    "mongodb-memory-server": "^8.12.0",
    "eslint": "^8.47.0",
    "prettier": "^2.8.8",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 53,
        "functions": 50,
        "lines": 75,
        "statements": 69
      }
    }
  }
}
