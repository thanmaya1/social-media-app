# Server
PORT=5000
MONGO_URI=mongodb://localhost:27017/social_media_app
ACCESS_TOKEN_SECRET=change_this_access_secret
REFRESH_TOKEN_SECRET=change_this_refresh_secret
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d
CLIENT_URL=http://localhost:3000

# Optional Cloudinary settings (if you want uploads to go to Cloudinary)
# You can set a single `CLOUDINARY_URL` or the three individual vars below.
# Example CLOUDINARY_URL: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Optional Redis (used for refresh token store and presence mapping)
REDIS_URL=

# SMTP (optional) - if not set emails will be logged locally (stub)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-pass
# SMTP_SECURE=false
# EMAIL_FROM="My App <no-reply@example.com>"

# CSRF: The server exposes `GET /api/csrf-token` which sets a `XSRF-TOKEN` cookie
# and expects the `x-csrf-token` header on mutating requests. CSRF is disabled in
# `NODE_ENV=test` to simplify automated tests.
 
# Optional Redis (set to a redis URL to enable Redis-backed refresh tokens)
REDIS_URL=

# Optional SMTP settings (if not set the app will log emails instead of sending)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
EMAIL_FROM=no-reply@example.com
